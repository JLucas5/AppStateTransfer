{
    "manifest_version": 2,
    "name": "Session Transfer",
    "version": "0.1",
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["content.js"]
      }
    ],
    "background": {
      "persistent": false,
      "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
      },
    "permissions": ["storage", "tabs", "activeTab", "cookies", "http://*/*", "https://*/*"]
  }